doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  // Favicon
  link(rel='shortcut icon' href='./../img/logo.png' type='image/x-icon')
  // Google fonts
  link(rel='preconnect' href='https://fonts.googleapis.com')
  link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
  link(href='https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap' rel='stylesheet')
  // Custom css
  link(rel='stylesheet' href='./../css/user_dashboard.css')
  // Font awesome link
  script(src='https://kit.fontawesome.com/16f1886a82.js' crossorigin='anonymous' defer='')
  script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
  title #{title}
header.header
- const name = user.name.split(' ')[0]
  nav.nav
    .nav__logo
      a(href='#')
        img(src='./../img/logo.png' alt='Logo')
        p Transport Diary
    ul.nav__list
      li.nav__item
        span &nbsp;
        a.nav__link(href='#') New Ride
      li.nav__item
        span &nbsp;
        a.nav__link(href='#') My Account
      li.nav__item
        span &nbsp;
        a.nav__link.logOutBtn(href='#') Log Out
    .copyright
      i.fa-solid.fa-copyright
      span Copyright
main.main
  .main__header
    h3.main__header-name
      | Hello, #{name}
  form.ride--form
    .form__header
      p Enter Ride Details
    .form__content
      .form__group
        p From
        label.form__label(for='from_place') Place
        input#from_place.form__input(type='text' required='')
        label.form__label(for='from_date') Date
        input#from_date.form__input(type='date' required='')
      .form__group
        p To
        label.form__label(for='to_place') Place
        input#to_place.form__input(type='text' required='')
        label.form__label(for='to_date') Date
        input#to_date.form__input(type='date' required='')
      .form__group
        p Distance (km)
        label.form__label(for='distance') &nbsp;
        input#distance.form__input(type='number' required='')
      .form__group
        p Fuel
        label.form__label(for='rate') Rate (per litre)
        input#rate.form__input(type='number' required='')
        label.form__label(for='quantity') Quantity (litre)
        input#quantity.form__input(type='number' required='')
    .form__footer
      button.form__submit(type='submit') Submit
script(src='./../js/bundle.js')
script(src='./../js/styles/user_dashboard.js')
